<Window x:Class="Checkers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers.ViewModels"
        mc:Ignorable="d"
        Title="Checkers Game" Height="768" Width="1366" WindowState="Maximized">
    <Window.DataContext>
        <local:GameVM/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Checkers.png"/>
        </Grid.Background>
        <Button Width="450" Height="90" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Play" FontSize="70" FontFamily="Elephant" Margin="117,0,0,150" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF022717" Click="Button_Click"/>
    </Grid>
</Window>
